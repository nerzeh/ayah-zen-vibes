<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/widget_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true" />

    <!-- Content Overlay -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Header -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today's Verse"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:alpha="0.8"
            android:gravity="start"
            android:layout_marginBottom="8dp" />

        <!-- Content Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Arabic Text -->
            <TextView
                android:id="@+id/arabic_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيمِ"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:fontFamily="@font/amiri"
                android:lineSpacingMultiplier="1.3"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="6dp" />

            <!-- English Text -->
            <TextView
                android:id="@+id/english_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="&quot;In the name of Allah, the Most Gracious, the Most Merciful&quot;"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:alpha="0.9"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontStyle="italic" />

        </LinearLayout>

        <!-- Footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/verse_reference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Al-Fatiha 1:1"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:alpha="0.7"
                android:gravity="start" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/ic_circle"
                android:backgroundTint="#D4AF37" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>